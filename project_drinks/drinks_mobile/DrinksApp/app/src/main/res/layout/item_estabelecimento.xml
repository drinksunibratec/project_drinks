<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/medium_padding">

        <TextView
            android:id="@+id/txtNomeEstabelecimentoFavorito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/medium_padding"
            android:paddingTop="@dimen/medium_padding"
            android:text="@string/nome"
            android:textColor="@color/black_color"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/txtEnderecoEstabelecimentoFavorito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtNomeEstabelecimentoFavorito"
            android:paddingLeft="@dimen/medium_padding"
            android:paddingTop="@dimen/very_small_padding"
            android:text="@string/endereco"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/small_text" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imagemEstabelecimento"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:paddingRight="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding"
        android:src="@drawable/estabelecimento" />
</RelativeLayout>