<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white_color">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detalhe_produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_nome_produto_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textSize="@dimen/large_text"
                android:textColor="@color/black_color" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:paddingTop="@dimen/medium_padding"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtNomeProdutoDetalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/large_padding"
        android:paddingLeft="@dimen/medium_padding"
        android:text="Nome do Produto"
        android:textColor="@color/black_color"
        android:textSize="@dimen/large_text" />

    <TextView
        android:id="@+id/txtDescricaoProdutoDetalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/medium_padding"
        android:text="Decrição"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/medium_padding"/>

    <LinearLayout
        android:id="@+id/layoutValorTotalPorProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/cinza_claro_color"
        android:padding="@dimen/large_padding">

        <TextView
            android:id="@+id/txtPrecoUnitarioProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_padding"
            android:text="@string/txt_valor_unitario"
            android:textColor="@color/black_color"
            android:textSize="@dimen/medium_text" />


        <ImageButton
            android:id="@+id/btn_menosProdutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/very_small_padding"
            android:paddingLeft="@dimen/very_large_padding"
            android:background="@null"
            android:src="@drawable/ic_botao_menos" />

        <TextView
            android:id="@+id/txt_quantidade_produtos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_padding"
            android:text="1"
            android:textColor="@color/black_color"
            android:textSize="@dimen/large_text"/>

        <ImageButton
            android:id="@+id/btn_maisProdutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/very_small_padding"
            android:paddingLeft="@dimen/small_padding"
            android:background="@null"
            android:src="@drawable/ic_botao_mais" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/medium_padding">

        <TextView
            android:id="@+id/txt_valor_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_padding"
            android:layout_marginRight="@dimen/medium_padding"
            android:text="@string/txt_total_pedido"
            android:textColor="@color/black_color"
            android:textSize="@dimen/medium_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/small_padding">

        <Button
            android:id="@+id/btn_add_carrinho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_add_carrinho"
            android:background="@color/background_botoes"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>




</LinearLayout>
