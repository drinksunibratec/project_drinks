<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/medium_padding">

        <TextView
            android:id="@+id/txtNomeProdutoDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/medium_padding"
            android:paddingTop="@dimen/medium_padding"
            android:text="@string/nome"
            android:textColor="@color/black_color"
            android:textSize="@dimen/small_text" />

        <TextView
            android:id="@+id/txtDescricaoProdutoDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtNomeProdutoDetalhe"
            android:paddingLeft="@dimen/medium_padding"
            android:paddingTop="@dimen/very_small_padding"
            android:text="Cerveja Antartica gelada"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/very_small_text" />/

        <TextView
            android:id="@+id/txtPrecoProdutoDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtDescricaoProdutoDetalhe"
            android:paddingLeft="@dimen/medium_padding"
            android:paddingTop="@dimen/very_small_padding"
            android:text="PreÃ§o"
            android:textColor="@color/blue_color"
            android:textSize="@dimen/very_small_text" />

        <TextView
            android:id="@+id/txtQuantidadeProdutosDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtPrecoProdutoDetalhe"
            android:layout_marginTop="@dimen/very_small_padding"
            android:paddingLeft="@dimen/medium_padding"
            android:paddingRight="@dimen/medium_padding"
            android:paddingTop="@dimen/very_small_padding"
            android:text="Quantidade"
            android:textColor="@color/black_color"
            android:textSize="@dimen/very_small_text"/>

        <TextView
            android:id="@+id/txtValorTotalProdutoDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtQuantidadeProdutosDetalhe"
            android:paddingLeft="@dimen/medium_padding"
            android:paddingRight="@dimen/medium_padding"
            android:paddingTop="@dimen/very_small_padding"
            android:text="Valor total"
            android:textColor="@color/black_color"
            android:textSize="@dimen/very_small_text"/>


    </RelativeLayout>

    <ImageView
        android:id="@+id/imagemProdutoDetalhePedido"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:paddingRight="@dimen/small_padding"
        android:layout_marginTop="@dimen/large_padding"
        android:src="@mipmap/ic_launcher" />


</RelativeLayout>