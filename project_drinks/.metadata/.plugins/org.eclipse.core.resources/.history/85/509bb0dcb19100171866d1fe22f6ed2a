ackage util;

import javax.faces.application.FacesMessage;
import javax.faces.context.FacesContext;

import basicas.Solicitacao;
import basicas.Usuario;

public class ValidacaoCampos {


	private ValidacaoCampos instance = null;

	public ValidacaoCampos getInstance(){
		if(instance == null){
			instance = new ValidacaoCampos();
		}
		return instance;
	}

	public static void validarLogin(Usuario usuario){
		if(usuario.getNomeUsuario() == null || usuario.getNomeUsuario().equals("")){
			addError(Mensagens.NOME_USUARIO_OBRIGATORIO);
			if(usuario.getSenha() == null || usuario.getSenha().equals("")){
				addError(Mensagens.SENHA_OBRIGATORIA);
			}
			return;
		}

	}

	public static void validarSolicitacao(Solicitacao solicitacao){

		boolean pro = false;
		if(solicitacao.getTipoDeProblema() == null){
			addError(Mensagens.TIPO_PROBLEMA_OBRIGATORIO);
			pro = true;
		}

		if(solicitacao.getDescricao() == null || solicitacao.getDescricao().equals("")){
			addError(Mensagens.DESCRICAO_OBRIGATORIO);
			pro = true;
		}
		if(pro){
			return;
		}
	}


	public static void addInfo(String mensagem){
		FacesContext.getCurrentInstance().addMessage(null, new FacesMessage(FacesMessage.SEVERITY_INFO, "", mensagem));
	}

	public static void addError(String mensagem){
		FacesContext.getCurrentInstance().addMessage(null, new FacesMessage(FacesMessage.SEVERITY_ERROR, "Erro", mensagem));
	}
}
