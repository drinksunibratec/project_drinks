package managedbean;

import java.io.Serializable;
import java.util.List;

import javax.faces.bean.ManagedBean;

import basicas.Tecnico;
import basicas.Usuario;
import business.BasicBO;
import business.TecnicoBO;
import business.UsuarioBO;

@ManagedBean
public class TecnicoBean extends ManagedBeanGenerico<Tecnico> implements Serializable{

	/**
	 * 
	 */
	private Tecnico tecnico;
	
	private Usuario usuario;
	
	
	@Override
	public BasicBO<Tecnico> getBoPadrao() {
		return TecnicoBO.getInstance();
	}

	@Override
	public void setBoPadrao(BasicBO<Tecnico> boPadrao) {
		
	}
	
	public List<Usuario> getUsuariosAutoComplete(String nome){
		return UsuarioBO.getInstance().listPorNome(nome);
	}
	
	
	@Override
	public void init() {
		super.init();
		tecnico = new Tecnico();
		tecnico.setAtivo(true);
		usuario = new Usuario();
	}

	public Usuario getUsuario() {
		return usuario;
	}

	public void setUsuario(Usuario usuario) {
		this.usuario = usuario;
	}
	
	public Tecnico getTecnico() {
		return tecnico;
	}

	public void setTecnico(Tecnico tecnico) {
		this.tecnico = tecnico;
	}

	public String loadEdit(Tecnico tecnico){
		this.tecnico = tecnico;
		setEdit(true);
		return "OK";
	}
	
	@Override
	public void afterSave() {
		setBean(new Tecnico());
		this.usuario = new Usuario();
		this.tecnico = new Tecnico();
		this.tecnico.setAtivo(true);
	}
	
	@Override
	public void beforeSave() {
	
		setBean(tecnico);
		
	}

	@Override
	public void beforeEdit() {
		setBean(tecnico);
		
	}
	

}
