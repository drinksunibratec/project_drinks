package business;

import java.util.List;

import basicas.Usuario;
import fachada.ServicosGeraisBusiness;

public class UsuarioBO extends BasicBO<Usuario>{
	
	private static UsuarioBO instance = null;
	
	public static UsuarioBO getInstance(){
		if (instance == null){
			instance = new UsuarioBO();
		}
		return instance;
	}
	

	
	private void retirarCaracteresCPF(Usuario entity){
		String cpf = entity.getCpf().replace(".", "").replace("-", "");
		entity.setCpf(cpf);
	}

	@Override
	public void insert(Usuario entity) {
		retirarCaracteresCPF(entity);
		ServicosGeraisBusiness.getInstance().inserirUsuario(entity);
		
	}

	@Override
	public void remove(Usuario entity) {
		ServicosGeraisBusiness.getInstance().removerUsuario(entity);
		
	}

	@Override
	public void edit(Usuario entity) {
		retirarCaracteresCPF(entity);
		ServicosGeraisBusiness.getInstance().editarUsuario(entity);
		
	}

	@Override
	public List<Usuario> list() {
		return ServicosGeraisBusiness.getInstance().listarUsuarios();
	}
	
	
	public List<Usuario> listPorNome(String nome) {
		return ServicosGeraisBusiness.getInstance().listarUsuariosPorNome(nome);
	}

	public Usuario getUsuario(Usuario usuario){
		return ServicosGeraisBusiness.getInstance().getUsuario(usuario);
	}
}
