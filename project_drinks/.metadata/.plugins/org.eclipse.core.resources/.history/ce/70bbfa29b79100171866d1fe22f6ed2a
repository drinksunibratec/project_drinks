package managedbean;

import java.io.Serializable;
import java.util.ArrayList;
import java.util.List;

import javax.annotation.PostConstruct;
import javax.faces.bean.ManagedBean;
import javax.persistence.PreRemove;

import basicas.TipoDeProblema;
import business.BasicBO;
import business.TipoDeProblemaBO;
import fachada.ServicosGeraisBusiness;

@ManagedBean
public class TipoProblemaBean extends ManagedBeanGenerico<TipoDeProblema> implements Serializable{

	/**
	 * 
	 */
	private static final long serialVersionUID = -9135766805809990592L;
	private TipoDeProblema problema;
	
	@Override
	public BasicBO<TipoDeProblema> getBoPadrao() {
		return TipoDeProblemaBO.getInstance();
	}

	@Override
	public void setBoPadrao(BasicBO<TipoDeProblema> boPadrao) {
		
	}
	
	@Override
	public void init() {
		super.init();
		problema = new TipoDeProblema();
		problema.setAtivo(true);
	}

	public TipoDeProblema getProblema() {
		return problema;
	}

	public void setProblema(TipoDeProblema problema) {
		this.problema = problema;
	}
	
	public String loadEdit(TipoDeProblema problema){
		this.problema = problema;
		setEdit(true);
		return "OK";
	}
	
	@Override
	public void afterSave() {
		setBean(new TipoDeProblema());
		this.problema = new TipoDeProblema();
		this.problema.setAtivo(true);
	}
	
	@Override
	public void beforeSave() {
		setBean(problema);
		
	}

	@Override
	public void beforeEdit() {
		setBean(problema);
	}
	

}
