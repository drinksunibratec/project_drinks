	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui" lang="pt-BR">
<h:head>
	<title>Serviços Gerais</title>

	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<ui:include src="/pages/dialog/confirm.xhtml" />
	<ui:include src="/pages/menu/menu.xhtml" />

</h:head>
<h:body>
	<h:form id="formPefil">
		<p:messages id="messages" />
		<p:panel id="Cadastro" header="Cadastro" style="margin-bottom:20px">
			<h:panelGrid columns="2" cellpadding="5">

				<p:outputLabel for="nome" value="Nome:" />
				<p:inputText id="nome" value="#{perfilBean.perfil.nome}" />

				<p:selectBooleanCheckbox id="ativo" value="#{perfilBean.perfil.ativo}" />
				<p:outputLabel for="ativo" value="Ativo" />


				<p:commandButton value="Inserir" action="#{perfilBean.inserir}"
					rendered="#{!perfilBean.edit}" update="@form">
				</p:commandButton>

				<p:commandButton value="Editar" action="#{perfilBean.editar}"
					rendered="#{perfilBean.edit}" update="@form">
				</p:commandButton>
				<p:commandButton value="Cancelar" action="#{perfilBean.cancelar}"
					update="@form">
				</p:commandButton>
			</h:panelGrid>
		</p:panel>

		<p:panel id="Listagem" header="Listagem" style="margin-bottom:20px">

			<p:dataTable id="dtTable" var="obj" value="#{perfilBean.list}"
				paginator="true" rows="10"
				emptyMessage="Sem registros encontrados">

				<p:column headerText="Id"  sortBy="#{obj.id}"
					filterMatchMode="contains">
					<h:outputText value="#{obj.id}" />
				</p:column>

				<p:column headerText="Nome" 
					sortBy="#{obj.nome}" filterMatchMode="contains">
					<h:outputText value="#{obj.nome}" />
				</p:column>

				<p:column headerText="data" 
					sortBy="#{obj.dataUltimaAtualizacao}s" filterMatchMode="contains">
					<h:outputText value="#{obj.dataUltimaAtualizacao}">
						<f:convertDateTime pattern="dd/MM/yyyy" />
					</h:outputText>
				</p:column>

				<p:column headerText="Ativo" 
					sortBy="#{obj.ativo}" filterMatchMode="contains">
					<h:outputText value="#{obj.ativo ? 'SIM' : 'NÃO'} " />
				</p:column>

				<p:column headerText="Ações">
					<p:commandButton icon="ui-icon-pencil"
						actionListener="#{perfilBean.loadEdit(obj)}" update="@form">
					</p:commandButton>

					<p:commandButton icon="ui-icon-closethick"
						action="#{perfilBean.excluir(obj)}" update="@form">
						<p:confirm header="Confirmação"
							message="Deseja deletar o registro?" icon="ui-icon-alert" />
					</p:commandButton>
				</p:column>
			</p:dataTable>
		</p:panel>

	</h:form>

</h:body>
