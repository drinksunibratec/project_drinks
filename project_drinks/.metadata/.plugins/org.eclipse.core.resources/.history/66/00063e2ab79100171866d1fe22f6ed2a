package fachada;

import java.util.List;

import basicas.Perfil;
import basicas.Setor;
import basicas.Solicitacao;
import basicas.Tecnico;
import basicas.TipoDeProblema;
import basicas.Usuario;
import dados.geral.DAOFactory;

public class ServicosGeraisBusiness {

	private static ServicosGeraisBusiness instance = null;
	
	
	public static ServicosGeraisBusiness getInstance(){
		if (instance == null){
			instance = new ServicosGeraisBusiness();
		}
		return instance;
	}
	
	//------------------TIPO DE PROBLEMA------------------
	
	public void inserirTipoDeProblema(TipoDeProblema entity){
		DAOFactory.getTipoDeProblemaDAO().insert(entity);
	}
	
	public List<TipoDeProblema> listarTiposDeProblema(){
		return DAOFactory.getTipoDeProblemaDAO().getAll();
	}
	
	public void editarTipoDeProblema(TipoDeProblema entity){
		DAOFactory.getTipoDeProblemaDAO().update(entity);
	}
	
	public void excluirTipoDeProblema(TipoDeProblema entity){
		DAOFactory.getTipoDeProblemaDAO().remove(entity);
	}
	
	//---------------------SETOR------------------------
	
	public void inserirSetor(Setor entity){
		DAOFactory.getSetorDAO().insert(entity);
	}
	
	public void editarSetor(Setor entity){
		DAOFactory.getSetorDAO().update(entity);
	}
	
	public void removerSetor(Setor entity){
		DAOFactory.getSetorDAO().remove(entity);
	}
	
	public List<Setor> listarSetores(){
		return DAOFactory.getSetorDAO().getAll();
	}
	
	//---------------------PERFIL------------------------
	
	public void inserirPerfil(Perfil entity){
		DAOFactory.getPerfilDAO().insert(entity);
	}
	
	public void editarPerfil(Perfil entity){
		DAOFactory.getPerfilDAO().update(entity);
	}
	
	public void removerPerfil(Perfil entity){
		DAOFactory.getPerfilDAO().remove(entity);
	}
	
	public List<Perfil> listarPerfis(){
		return DAOFactory.getPerfilDAO().getAll();
	}
	
	
	//---------------------USUARIO------------------------
	public void inserirUsuario(Usuario entity){
		DAOFactory.getUsuarioDAO().insert(entity);
	}
	
	public void editarUsuario(Usuario entity){
		DAOFactory.getUsuarioDAO().update(entity);
	}
	
	public void removerUsuario(Usuario entity){
		//TODO remover quando tiver associado 
		DAOFactory.getUsuarioDAO().remove(entity);
	}
	
	public List<Usuario> listarUsuarios(){
		return DAOFactory.getUsuarioDAO().getAll();
	}
	
	public List<Usuario> listarUsuariosPorNome(String nome){
		return DAOFactory.getUsuarioDAO().getSolicitacoesPorSetor(nome);
	}
	
	public Usuario getUsuario(Usuario entity){
		return DAOFactory.getUsuarioDAO().getUsuario(entity);
	}
	
	//---------------------TECNICO------------------------
	public void inserirTenico(Tecnico entity){
		DAOFactory.getTecnicoDAO().insert(entity);
	}
	
	public void editarTecnico(Tecnico entity){
		DAOFactory.getTecnicoDAO().update(entity);
	}
	
	public void removerTecnico(Tecnico entity){
		//TODO remover quando tiver associado 
		DAOFactory.getTecnicoDAO().remove(entity);
	}
	
	public List<Tecnico> listarTecnicos(){
		return DAOFactory.getTecnicoDAO().getAll();
	}
	
	//---------------------Solicitacao------------------------
	public void inserirSolicitacao(Solicitacao entity){
		DAOFactory.getSolicitacaoDAO().insert(entity);
	}
	
	public void editarSolicitacao(Solicitacao entity){
		DAOFactory.getSolicitacaoDAO().update(entity);
	}
	
	public void removerSolicitacao(Solicitacao entity){
		//TODO remover quando tiver associado 
		DAOFactory.getSolicitacaoDAO().remove(entity);
	}
	
	public List<Solicitacao> listarSolicitacao(){
		return DAOFactory.getSolicitacaoDAO().getAll();
	}
	
	public Integer getMaxNumeroSolicitacao(){
		return DAOFactory.getSolicitacaoDAO().getMaxId();
	}
}
