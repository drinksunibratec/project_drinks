package managedbean;

import java.io.Serializable;

import javax.faces.bean.ManagedBean;

import basicas.Setor;
import basicas.TipoDeProblema;
import business.BasicBO;
import business.SetorBO;

@ManagedBean
public class SetorBean extends ManagedBeanGenerico<Setor> implements Serializable{

	/**
	 * 
	 */
	private static final long serialVersionUID = -9135766805809990592L;
	private Setor setor;
	
	@Override
	public BasicBO<Setor> getBoPadrao() {
		return SetorBO.getInstance();
	}

	@Override
	public void setBoPadrao(BasicBO<Setor> boPadrao) {
		
	}
	
	@Override
	public void init() {
		super.init();
		setor = new Setor();
		setor.setAtivo(true);
	}

	
	
	public Setor getSetor() {
		return setor;
	}

	public void setSetor(Setor setor) {
		this.setor = setor;
	}

	public String loadEdit(Setor setor){
		this.setor = setor;
		setEdit(true);
		return "OK";
	}
	
	@Override
	public void afterSave() {
		setBean(new Setor());
		this.setor = new Setor();
		this.setor.setAtivo(true);
	}
	
	@Override
	public void beforeSave() {
		setBean(setor);
		
	}

	@Override
	public void beforeEdit() {
		setBean(setor);
	}
	

}
