package business;

import java.util.List;

import basicas.TipoDeProblema;
import fachada.ServicosGeraisBusiness;

public class TipoDeProblemaBO extends BasicBO<TipoDeProblema>{
	
	private static TipoDeProblemaBO instance = null;
	
	public static TipoDeProblemaBO getInstance(){
		if (instance == null){
			instance = new TipoDeProblemaBO();
		}
		return instance;
	}
	
	@Override
	public void insert(TipoDeProblema problema){
		ServicosGeraisBusiness.getInstance().inserirTipoDeProblema(problema);
	}
	
	@Override
	public List<TipoDeProblema> list(){
		return ServicosGeraisBusiness.getInstance().listarTiposDeProblema();
	}
	
	@Override
	public void edit(TipoDeProblema problema){
		ServicosGeraisBusiness.getInstance().editarTipoDeProblema(problema);
	}
	
	@Override
	public void remove(TipoDeProblema problema){
		ServicosGeraisBusiness.getInstance().excluirTipoDeProblema(problema);
	}

}
